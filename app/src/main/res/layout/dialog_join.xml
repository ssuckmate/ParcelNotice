<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/tv_join_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="회원가입"
            android:textSize="24dp"
            android:gravity="center"
            android:background="@color/colorAccent"
             />

        <EditText
            android:id="@+id/et_join_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/tv_join_title"
            android:layout_marginTop="24dp"
            android:hint="@string/email_address"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/et_join_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/et_join_email"
            android:layout_marginTop="24dp"
            android:hint="@string/password"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/et_join_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/et_join_password"
            android:layout_marginTop="24dp"
            android:hint="@string/name"
            android:textSize="24dp" />

        <LinearLayout
            android:id="@+id/linear_join_bottom"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/et_join_name"
            android:layout_marginTop="48dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_join_confrim"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="확인"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_join_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="취소"

                android:textSize="24dp" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>